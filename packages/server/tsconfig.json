{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "src/**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "paths": {
      "@shared/types/*": ["../shared/dist/types/*"]
    }
  }
}
