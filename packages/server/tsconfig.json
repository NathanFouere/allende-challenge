{
  "extends": "@adonisjs/tsconfig/tsconfig.app.json",
  "include": [
    "**/*",
  ],
  "exclude": [
    "node_modules",
    "build"
  ],
  "compilerOptions": {
    "outDir": "build",
    "rootDir": "./",
    "baseUrl": "./",
    "sourceMap": true,
    "moduleResolution": "nodenext",
    "paths": {
      "@shared/types/*": ["../shared/dist/types/*"],
      "#services/*": ["./app/services/*.js"],
      "#controllers/*": ["./app/controllers/*.js"]
    }
  }
}
